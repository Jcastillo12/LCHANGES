            </div>
            <!--end of container-->
			{% endif %}
            <div class="pos-absolute pos-bottom col-xs-12 text-center">
            	<div class="article__author">
                	{{ author_picture }}
                    <h6 class="type--uppercase">{{ author_name }}</h6>
                </div>
            </div>
        </div>
